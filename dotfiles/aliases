# alias csc="brew cask cat"
csc() {
  brew cask cat "$@" | bat -l ruby
}

alias dmount='diskutil mount'
alias dumount='diskutil unmount'

# open in ForkLift
fl() {
  if [ $# -eq 0 ]; then
    open -a ForkLift .
  else
    open -a ForkLift "$@"
  fi
}

# QuickLook on macOS
ql() {
  qlmanage -p "$@" 2> /dev/null
}


