# ─── EDITORS ──────────────────────────────────────────────────────────────────

# if [ `command -v nvim` ]; then
#   alias vim=nvim
# fi

# alias c='code-insiders -r'
c() {
  [ `command -v code-insiders` ] && CODE=code-insiders
  [ `command -v code` ] && CODE=code

  if [ $# -eq 0 ]; then
    $CODE -r .
  else
    $CODE $@
  fi
}
# alias code='code-insiders'
