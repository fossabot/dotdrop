# alias brc="brew cat"
brc() {
  brew cat "$@" | bat -l ruby
}
alias brl="brew ls"
alias brlv="brew leaves | column"

alias cs="brew cask"
alias csl="brew cask ls"
# alias csi="brew cask install"
# alias csx="brew cask uninstall"
alias csz="brew cask zap"
