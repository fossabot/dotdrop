#!/usr/bin/env bash

# remove dir

if [[ -n "$@" ]]; then
  if [[ -d "$@" ]] || [[ -f "$@" ]]; then
    echo "ðŸ—‘  Deleting: $@"
    rm -rf "$@"
    return
  fi
fi

files=$(/bin/ls -A | fzf -m --query="$1" --cycle --preview="$FZF_PREVIEW_ANY")

if [[ $files ]]; then
  for file in $(echo $files); do
    echo "ðŸ—‘  Deleting: $file"
    rm -rf $file
  done
fi

unset files
